<resources>
    <!-- The Light version of our theme -->
    <style name="Theme.Jotter" parent="Base.Theme.Jotter">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- The Base Theme for our app -->
    <style name="Base.Theme.Jotter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Styling the Contextual Action Bar -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.Jotter.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>
</resources>