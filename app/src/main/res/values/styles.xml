<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Jotter.EditText.Note" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">text|textMultiLine|textCapSentences</item>
    </style>

    <style name="Widget.Jotter.EditText.Note.Title">
        <item name="android:textAppearance">?textAppearanceHeadline6</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="lineHeight">24sp</item>
        <item name="firstBaselineToTopHeight">20sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Widget.Jotter.EditText.Note.Content">
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="lineHeight">24sp</item>
        <item name="firstBaselineToTopHeight">20sp</item>
        <item name="lastBaselineToBottomHeight">8sp</item>
    </style>

    <style name="Widget.Jotter.TextView.Note" parent="TextStyle.Jotter.Body2">
        <item name="android:maxLines">@integer/max_lines_note_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Jotter.CardView.Note" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:checkable">true</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="Widget.Jotter.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

</resources>